import psycopg2
from psycopg2.extras import RealDictCursor

# ----------------------------
# Database connection
# ----------------------------
conn = psycopg2.connect(
    host="localhost",
    user="your_user",
    password="your_password",
    dbname="your_database"
)
cursor = conn.cursor(cursor_factory=RealDictCursor)

# ----------------------------
# Function: insert_or_list_statuses
# ----------------------------
def insert_or_list_statuses(doc_id, status_description):
    """
    Inserts a document with the given status_description if it exists.
    If not, returns all available statuses.
    """
    query = """
    WITH status_check AS (
        SELECT status
        FROM status_master
        WHERE LOWER(status_desc) = LOWER(%s)
    ),
    insert_doc AS (
        INSERT INTO documents (doc_id, status)
        SELECT %s, status
        FROM status_check
        RETURNING doc_id, status
    )
    SELECT * FROM insert_doc
    UNION ALL
    SELECT status AS doc_id, status_desc AS status
    FROM status_master
    WHERE NOT EXISTS (SELECT 1 FROM insert_doc);
    """

    cursor.execute(query, (status_description, doc_id))
    results = cursor.fetchall()

    # Determine if insertion happened
    if results and 'doc_id' in results[0] and isinstance(results[0]['doc_id'], int):
        # Inserted row returned
        return {"inserted_doc": results[0]}
    else:
        # Status not found â†’ return list of available statuses
        return {"available_statuses": results}


# ----------------------------
# Example Usage
# ----------------------------
if __name__ == "__main__":
    # Case 1: Status exists
    result = insert_or_list_statuses(104, "Approved")
    print("Result for existing status:")
    print(result)

    # Case 2: Status does NOT exist
    result = insert_or_list_statuses(105, "Completed")
    print("\nResult for non-existing status:")
    print(result)

    conn.commit()
    cursor.close()
    conn.close()
